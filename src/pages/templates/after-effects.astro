---
import Layout from '../../layouts/Layout.astro';
import '../../styles/templates.css';
import '../../styles/animation-base.css';
import '../../styles/after-effects.css';
import afterEffectsTemplates from '../../data/after-effects.json';

const title = "Adobe After Effects Templates â€“ Templates | CGIArray";
const description = "Professionally designed After Effects templates for motion graphics, intros, transitions, and more.";
const url = "https://cgiarray.com/templates/after-effects";
const image = "/images/after-effects-preview.jpg";
---

<Layout title={title} description={description} url={url} image={image}>
  <section class="animation-category-page">
    <h1>Adobe After Effects Templates</h1>
    <p class="page-intro">
      Professionally designed templates for motion graphics, intros, transitions, and more.
    </p>

    <div class="animation-grid">
      {afterEffectsTemplates.map((item) => (
        <div
          class="animation-card searchable-item"
          data-title={item.title.toLowerCase()}
          data-category="after-effects"
          data-parent-category="templates"
        >

          <img src="/images/dummy-thumb.jpg" alt={item.title} />
      <p>{item.title}</p>

        </div>
      ))}
    </div>
  </section>
</Layout>
