---
import Layout from '../../layouts/Layout.astro';
import '../../styles/3d-assets.css';
import '../../styles/animation-base.css';
import '../../styles/v-tuber-avatars.css';
import vtuberAvatars from '../../data/v-tuber-avatars.json';

const title = "V-Tuber Avatars – 3D Assets | CGIArray";
const description = "Custom V-Tuber avatars designed for streaming, YouTube, and virtual identity. Compatible with major tracking software.";
const url = "https://cgiarray.com/3d-assets/v-tuber-avatars";
const image = "/images/v-tuber-avatars-preview.jpg";
---

<Layout title={title} description={description} url={url} image={image}>
  <section class="animation-category-page">
    <h1>V-Tuber Avatars</h1>
    <p class="page-intro">
      Expressive 3D V-Tuber avatars with blendshapes, rigs, and stylized detail.</p>

    <div class="animation-grid">
      {vtuberAvatars.map((item) => (
        // <div class="animation-card" data-title={item.title} data-category="vtuber">
        <div class="animation-card searchable-item" data-title={item.title} data-category="v-tuber"> 
          <img src="/images/dummy-thumb.jpg" alt={item.title} />
          <p>{item.title}</p>
        </div>
      ))}
    </div>
  </section>
</Layout>


